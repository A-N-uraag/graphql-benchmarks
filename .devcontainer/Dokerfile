# Start with a base Ubuntu image
FROM ubuntu:20.04

# Prevent dialog prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Update and install basic utilities
RUN apt-get update && apt-get install -y curl wget zip unzip git build-essential && apt-get clean

# Install Go
RUN wget https://dl.google.com/go/go1.17.2.linux-amd64.tar.gz && \
    tar -C /usr/local -xzf go1.17.2.linux-amd64.tar.gz && \
    rm go1.17.2.linux-amd64.tar.gz
ENV PATH=$PATH:/usr/local/go/bin

# Install Node.js
RUN curl -sL https://deb.nodesource.com/setup_16.x | bash - && \
    apt-get install -y nodejs

# Install OpenJDK-11
RUN apt-get install -y openjdk-11-jdk

# Install Nginx
RUN apt-get install -y nginx

# Verify installations
RUN go version && node -v && npm -v && java -version

# Set the working directory
WORKDIR /workspace

# Expose any ports you might need
# EXPOSE 8080 8081 8082 8083 3000

# Clean up
RUN apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
